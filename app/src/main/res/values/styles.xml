<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline2
        </item>
        <item name="android:textColor">@color/login_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="MyLogoutButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/logout_button_text</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>
</resources>